clear 
a = serial('/dev/cu.usbmodem1421');
a.InputBufferSize = 128;
fopen(a);
set(a, 'BaudRate', 115200);
a.ReadAsyncMode = 'manual';

figure(1)
clf

eps = 0.5;
for i = 1:1000
    readasync(a)
    a.BytesAvailable;
    out = fscanf(a);
    if i > 5
        split = strsplit(out(1:end-2), ',');
        data0 = str2double(split)
        if size(data0, 2) == 3
            data1 = [data0(1)+eps*cos(data0(3)) data0(2)+eps*sin(data0(3))];
            vectarrow(data0(1:2), data1);
%             plot(data0(1), data0(2), 'bo', 'MarkerSize', 1)
        end
        drawnow
    end
end

stopasync(a)
fclose(a);
delete(a) 
clear a   